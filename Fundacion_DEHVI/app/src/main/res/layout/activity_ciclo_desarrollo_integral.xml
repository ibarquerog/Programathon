<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:theme="@style/Theme.AppCompat.NoActionBar"
    android:background="@color/blanco"
    tools:context=".CicloDesarrolloIntegral">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp">


            <ImageView
                android:id="@+id/imageViewLogin"
                android:layout_width="200dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/logo_dehvi_horizontal_color" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:paddingLeft="27dp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="5dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_view_Nombre"
                android:layout_width="match_parent"
                android:paddingLeft="25dp"
                android:layout_height="wrap_content"
                android:text="@string/sampleText"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="@dimen/text_margin"
                android:textSize="18sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DNI"
                android:paddingLeft="27dp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginTop="14dp"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="5dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_view_DNI"
                android:layout_width="match_parent"
                android:paddingLeft="25dp"
                android:layout_height="wrap_content"
                android:text="@string/sampleText"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="@dimen/text_margin"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GÃ©nero"
                android:paddingLeft="27dp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginTop="14dp"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="5dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_view_genero"
                android:layout_width="match_parent"
                android:paddingLeft="25dp"
                android:layout_height="wrap_content"
                android:text="@string/sampleText"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="@dimen/text_margin"
                android:textSize="18sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de nacimiento"
                android:paddingLeft="27dp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginTop="14dp"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="5dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_view_nacimiento"
                android:layout_width="match_parent"
                android:paddingLeft="25dp"
                android:layout_height="wrap_content"
                android:text="@string/sampleText"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="@dimen/text_margin"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nacimiento prematuro"
                android:paddingLeft="27dp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginTop="14dp"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="5dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_view_prematuro"
                android:layout_width="match_parent"
                android:paddingLeft="25dp"
                android:layout_height="wrap_content"
                android:text="@string/sampleText"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="@dimen/text_margin"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de ingreso"
                android:paddingLeft="27dp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginTop="14dp"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="5dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_view_ingreso"
                android:layout_width="match_parent"
                android:paddingLeft="25dp"
                android:layout_height="wrap_content"
                android:text="@string/sampleText"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="@dimen/text_margin"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/BTN_Aceptar_Desarrollo"
                    android:layout_width="157dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/black_button"
                    android:gravity="center"
                    android:onClick="onClickAceptar"
                    android:paddingBottom="8dp"
                    android:text="Aceptar"
                    android:textColor="#FFFF" />

                <Button
                    android:id="@+id/BTN_Cuestionario_Desarrollo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/button"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:onClick="onClickBtnLogin"
                    android:paddingBottom="8dp"
                    android:text="Aplicar cuestionario"
                    android:textColor="#FFFF" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>




    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>